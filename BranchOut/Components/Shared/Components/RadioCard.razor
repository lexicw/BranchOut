@{
    var baseClasses = $"mx-auto {FontSize}";
    var classes = Type switch
    {
        "Background" => $"border border-1 bg-square bg-{ValueLower} {baseClasses}",
        "Color" => $"border border-1 bg-square bg-{ValueLower} {baseClasses}",
        "Font" => $"font-container font-{ValueLower} {baseClasses}",
        "Border" => $"bg-square border-{ValueLower} {baseClasses}",
        _ => baseClasses
    };
}

<label class="radio-card text-center">
    <InputRadio class="radio" Value="@ValueLower" />
    <span class="radio-card-body">
        <br />
        <span class="@classes">
            @if (Type == "Font")
            {
                @Value
            }
        </span>
        <br />@Value
    </span>
</label>


@code {
    [Parameter]
    public string Type { get; set; } = "";

    [Parameter]
    public string Value { get; set; }

    [Parameter]
    public string FontSize { get; set; } = "";

    public string ValueLower => Value.ToLower().Replace(" ", "-");
}
