@if (ImagePath is not null && ImagePath != "")
{
    <img src="@ImagePath" width="@Width" height="@Height" />
}
else
{
    <svg class="bd-placeholder-img font-inter" width="@Width" height="@Height" xmlns="http://www.w3.org/2000/svg" aria-hidden="true" preserveAspectRatio="xMidYMid slice" focusable="false">
        <rect width="100%" height="100%" fill="#333333" />
        <text x="50%" y="50%" dy=".4em" text-anchor="middle" font-size="@FontSize" fill="#FFFFFF">
            @if(Username is not null && Username.Length > 0)
            {
                @Username.Substring(0, 1).ToUpper()
            }
        </text>
    </svg>
}

@code {
    [Parameter]
    public string Width { get; set; }

    [Parameter]
    public string Height { get; set; }

    [Parameter]
    public string Username { get; set; }

    [Parameter]
    public int FontSize { get; set; }

    [Parameter]
    public string? ImagePath { get; set; }
}
